    ## Amino acid codon dictionary

Bases = "tcag"
Amino_acids = "FFFFSSSSYY**CC*WLLLLPPPPHHQQRRRRIIMMTTTTNNKKSSRRVVVVAAAADDEEGGGG"
Codons = [a + b + c for a in Bases for b in Bases for c in Bases]
AADictionary = dict(zip(Codons, Amino_acids))

#print(AADictionary["tag"])

    ## Fasta Label Code dictionary

Fastafile = open("Dataset").read().split("\n")
Data_dictionary = dict(zip(Fastafile[::2], Fastafile[1::2]))

#print(Data_dictionary[">Rosalind_12"])

    ## Removing introns

DnaSeq = list(Data_dictionary.values())[0]
Introns = [x for x in Data_dictionary.values()][1::]
nointrons = DnaSeq.replace(Introns[0],"")
nointrons2 = nointrons.replace(Introns[1],"")

Newseq = [len(DnaSeq.replace(intron, "")) for intron in Introns]

def intron_remover(seq, list):
    Newseq = seq
    for intron in list:
        Newseq = Newseq.replace(intron, "")
    return Newseq

print(intron_remover(DnaSeq, Introns))
print(len(intron_remover(DnaSeq, Introns)))

print(Newseq)
print(DnaSeq)
print(Introns)
